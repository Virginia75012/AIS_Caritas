<div class="container flats">
  <div class="text-center mt-5">
      <h2>TABLEAU DE BORD</h2>
      <hr>
    </div>
  <div class="row">
    <div id="map"
     style="width: 100%;
     height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    <% @flats.each do |flat| %>
      <div class="col-xs-4 mt-5 flats">
        <div class="card-flat">
          <% flat.photos.each do |photo| %>
          <%= cl_image_tag photo.key %>
          <% end %>
        <div class="card-flat-infos">
          <h2><%= flat.title.capitalize %></h2>
          <p><%= flat.address.capitalize %></p>
          <p><%= flat.area %>m²</p>
          <p><%= flat.typology %></p>
        </div>
        <div class="container icons">
          <% if flat.status == true %>
            <div class="status">✅</div>
          <% else %>
            <%= link_to validate_flat_path(flat), method: :patch, id: "validate-link-#{flat.id}" do %>
              <div class="valider">A valider</div>
            <% end %>
          <% end %>

            <label for="box2" class="validation" id="sweet-alert-trash-<%=flat.id%>">❌</label>
            <%= link_to flat_path(flat), method: :delete, id: "delete-link-#{flat.id}" do %>
            <% end %>
<!--             <input id="box1" type="checkbox" />
            <label for="box1">✅</label> -->
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
