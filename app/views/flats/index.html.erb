<div class="container flats">
  <div class="text-center mt-5">
      <h2>MES APPARTEMENTS</h2>
      <hr>
    </div>
  <div class="row">
    <div class="col-xs-6 mx-auto">
      <%= link_to new_flat_path, class: "text-decoration-none" do %>
      <div class="container-fluid add">
        <div class="text-center">
          <img src="https://image.flaticon.com/icons/svg/1828/1828817.svg" alt="" style="width: 30px;"></div>
          <div class="text-center mt-3">Ajouter un nouveau logement</div>
      </div>
      <% end %>
    </div>
  </div>

  <% if danger %>
    <div class="alert alert-danger alert-dismissible fade show m-1" role="alert">
      <%= danger %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% elsif success %>
    <div class="alert alert-success alert-dismissible fade show m-1" role="alert">
      <%= success %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
<% end %>

  <div class="row mb-5">
    <% @flats.each do |flat| %>
      <div class="col-xs-4 mt-5 flats">
        <div class="card-flat">
          <% if flat.photos.attached? %>
            <% flat.photos.each do |photo| %>
              <%= cl_image_tag photo.key %>
            <% end %>
          <% else %>
            <%= image_tag "https://image.freepik.com/photos-gratuite/modele-jouet-maison-vue-face-cles-arriere-plan-flou_23-2148301690.jpg" %>
          <% end %>
        <div class="card-flat-infos">
          <h2><%= flat.title %></h2>
          <p><%= flat.address %></p>
          <p><%= flat.area %>mÂ²</p>
          <p><%= flat.typology.upcase %></p>
        </div>
        <div class="container icons">
           <% if flat.status == true %>
            <div class="status-owner"><i class="fas fa-check-circle fa-lg" style="color: #21bf73;"></i></div>
          <% else %>
            <div class="status-owner">ðŸ”´</div>
          <% end %>
            <label for="box2" id="sweet-alert-trash-<%=flat.id%>" class="btn btn-flat our-button alt" style="padding: 5px 12px;"><i class="far fa-trash-alt fa-sm"></i></label>
            <%= link_to flat_path(flat), method: :delete, id: "delete-link-#{flat.id}" do %>
            <% end %>

            <%= link_to edit_flat_path(flat), class: 'btn btn-flat our-button mb-2', style:'padding: 5px 12px;' do %>
              <i class="far fa-edit fa-sm"></i>
            <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>





