<div class="container flats">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-4 mt-5 flats">
        <div class="card-flat">
          <% flat.photos.each do |photo| %>
          <%= cl_image_tag photo.key %>
          <% end %>
        <div class="card-flat-infos">
          <h2><%= flat.title %></h2>
          <p><%= flat.address %></p>
          <p><%= flat.area %></p>
          <p><%= flat.typology %></p>
        </div>
        <div class="container icons">
          <p><%= link_to flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-flat our-button' do %>
            <i class="far fa-trash-alt"></i>
            <% end %>
            <%= link_to edit_flat_path(flat), class: 'btn btn-flat our-button' do %>
            <i class="far fa-edit"></i>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>



